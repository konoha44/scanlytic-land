# Handle 404 errors with correct language-specific error pages
ErrorDocument 404 /404.html

# Language-specific 404 handlers
# Detect language from URL and redirect to appropriate 404 page
RewriteEngine On

# English 404 page
RewriteCond %{REQUEST_URI} ^/en/.*
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule .* /en/404.html [L,R=404]

# Russian 404 page
RewriteCond %{REQUEST_URI} ^/ru/.*
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule .* /ru/404.html [L,R=404]

# German 404 page
RewriteCond %{REQUEST_URI} ^/de/.*
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule .* /de/404.html [L,R=404]

# French 404 page
RewriteCond %{REQUEST_URI} ^/fr/.*
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule .* /fr/404.html [L,R=404]

# Spanish 404 page
RewriteCond %{REQUEST_URI} ^/es/.*
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule .* /es/404.html [L,R=404]

# Redirect *.html to directory
RewriteCond %{REQUEST_URI} ^(.*)\.html$
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)\.html$ /$1/ [L,R=301]

# Redirect /qr-generator.html to /en/qr-generator/
RewriteRule ^qr-generator\.html$ /en/qr-generator/ [L,R=301]

# Redirect root-level pages to /en/ equivalents (without trailing slash)
RewriteRule ^blog$ /en/blog/ [L,R=301]
RewriteRule ^product$ /en/product/ [L,R=301]
RewriteRule ^contact$ /en/contact/ [L,R=301]
RewriteRule ^about$ /en/about/ [L,R=301]
RewriteRule ^qr-generator$ /en/qr-generator/ [L,R=301]
RewriteRule ^categories$ /en/categories/ [L,R=301]
RewriteRule ^tags$ /en/tags/ [L,R=301]
RewriteRule ^search$ /en/search/ [L,R=301,QSA]

# Redirect root-level pages to /en/ equivalents (with trailing slash)
RewriteRule ^blog/$ /en/blog/ [L,R=301]
RewriteRule ^product/$ /en/product/ [L,R=301]
RewriteRule ^contact/$ /en/contact/ [L,R=301]
RewriteRule ^about/$ /en/about/ [L,R=301]
RewriteRule ^qr-generator/$ /en/qr-generator/ [L,R=301]
RewriteRule ^categories/$ /en/categories/ [L,R=301]
RewriteRule ^tags/$ /en/tags/ [L,R=301]
RewriteRule ^search/$ /en/search/ [L,R=301,QSA]

# Redirect language-specific robots.txt and redirects.json to root versions
RewriteRule ^(en|ru|de|fr|es)/robots\.txt$ /robots.txt [L,R=301]
RewriteRule ^(en|ru|de|fr|es)/redirects\.json$ /redirects.json [L,R=301]

# Force trailing slashes for all URLs (except files and except certain paths)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !(.*)/$
# Исключаем главную страницу и /en/, которые должны обрабатываться особым образом
RewriteCond %{REQUEST_URI} !^/$
RewriteCond %{REQUEST_URI} !^/en$
# Исключаем файлы с расширениями
RewriteCond %{REQUEST_URI} !\.(html|json|txt|xml|css|js|jpg|jpeg|png|gif|svg|ico)$
RewriteRule ^(.*)$ $1/ [L,R=301]

# Serve compressed files if possible
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Browser caching
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/html "access plus 1 day"
</IfModule>

# Security headers
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-XSS-Protection "1; mode=block"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
